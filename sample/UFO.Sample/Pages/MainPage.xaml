<?xml version="1.0" encoding="utf-8" ?>
<page:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UFO.Sample.Pages.MainPage"
             xmlns:page="clr-namespace:UFO.Sample.Pages"   
			 xmlns:viewModels="clr-namespace:UFO.Sample.ViewModels">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

			<Button Command="{Binding OpenControlsCommand}"
					Text="Controls"
					x:DataType="viewModels:MainViewModel"/>
			
			<Button Command="{Binding OpenDialogsCommand}"
					Text="Dialogs"
					x:DataType="viewModels:MainViewModel"/>

		</VerticalStackLayout>
    </ScrollView>

</page:BasePage>
