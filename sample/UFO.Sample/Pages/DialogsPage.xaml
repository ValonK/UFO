<?xml version="1.0" encoding="utf-8" ?>
<page:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			   xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			   xmlns:page="clr-namespace:UFO.Sample.Pages"   
			   xmlns:viewModels="clr-namespace:UFO.Sample.ViewModels"
			   x:Class="UFO.Sample.Pages.DialogsPage"
               Title="DialogsPage">
	
	<ScrollView>
		<VerticalStackLayout Margin="10,30,10,0">
			<Button Text="Confirm Dialog"
				x:DataType="viewModels:DialogsViewModel"
				Command="{Binding ShowConfirmDialogCommand}"/>
		</VerticalStackLayout>
	</ScrollView>
</page:BasePage>