<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		  xmlns:pages="clr-namespace:UFO.Sample.Pages"
				xmlns:viewModel="clr-namespace:UFO.Sample.ViewModels.Controls"
          xmlns:selectionControls="clr-namespace:UFO.UI.Controls.Selection;assembly=UFO"
		  x:Class="UFO.Sample.Pages.Controls.SelectionControlsPage"
		  Title="Selection Controls">
	<VerticalStackLayout x:DataType="viewModel:SelectionControlsViewModel">
		<selectionControls:UfoCheckBox Color="{StaticResource Primary}"
									   Text="Lorem Ipsum Text"
									   TextColor="Red"
									   IsChecked="{Binding IsChecked}"
									   CheckedChangedCommand="{Binding CheckBoxChangedCommand}"/>
	</VerticalStackLayout>
</pages:BasePage>
