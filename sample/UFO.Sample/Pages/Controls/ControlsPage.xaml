<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UFO.Sample.Pages.Controls.ControlsPage"
			 xmlns:viewModels="clr-namespace:UFO.Sample.ViewModels.Controls"
             Title="ControlsPage">
	<ScrollView>
		<VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

			<Button Command="{Binding OpenChipsCommand}"
					Text="Chips"
					x:DataType="viewModels:ControlsViewModel"/>
			
			<Button Command="{Binding OpenCardsCommand}"
					Text="Cards"
					x:DataType="viewModels:ControlsViewModel"/>

		</VerticalStackLayout>
	</ScrollView>
</ContentPage>