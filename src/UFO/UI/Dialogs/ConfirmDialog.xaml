<?xml version="1.0" encoding="UTF-8"?>

<dialogs:BaseDialog  
	           xmlns:dialogs="clr-namespace:UFO.UI.Dialogs"
	           xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="UFO.UI.Dialogs.ConfirmDialog">
	
	<Frame x:Name="DialogContainer"
		   HorizontalOptions="Center"
		   VerticalOptions="Center"
		   MaximumWidthRequest="350">
		<Grid RowDefinitions="Auto, Auto, Auto, Auto"
			  RowSpacing="10">
			
			<!--HEADER IMAGE-->
			<Image Grid.Row="0"
				   x:Name="HeaderImage"/>
			
			<!--TITLE-->
			<Label x:Name="TitleLabel"
				   Grid.Row="1"/>
			
			<!--DESCRIPTION-->
			<Label x:Name="DescriptionLabel"
				   LineBreakMode="WordWrap"
				   Grid.Row="2"/>

			<Grid Grid.Row="3"
				  ColumnDefinitions="Auto, *, *">

				<Button x:Name="NegativeButton"
						Grid.Column="1"
						Margin="0,0,10,0"
						Clicked="NegativeButton_Clicked"/>

				<Button x:Name="PositiveButton"
						Grid.Column="2"				
						Clicked="PositiveButton_Clicked"/>
			</Grid>
		</Grid>
	</Frame>
</dialogs:BaseDialog>