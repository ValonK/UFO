<?xml version="1.0" encoding="utf-8" ?>
<controls:BaseSelectionControl 
			 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:UFO.UI.Controls.Selection" 
			 x:Class="UFO.UI.Controls.Selection.UfoCheckBox"
			 x:Name="Container">
	<Grid ColumnDefinitions="Auto, *">
		<CheckBox Grid.Column="0"
				  x:Name="CheckBox"
				  CheckedChanged="CheckBox_CheckedChanged"
				  Color="{Binding Source={x:Reference Container}, Path=Color}"
				  IsChecked="{Binding Source={x:Reference Container}, Path=IsChecked}"/>
		<Label Grid.Column="1"
			   HorizontalTextAlignment="Start"
			   VerticalTextAlignment="Center"
			   Text="{Binding Source={x:Reference Container}, Path=Text}"
			   FontFamily="{Binding Source={x:Reference Container}, Path=FontFamily}"
			   TextColor="{Binding Source={x:Reference Container}, Path=TextColor}">
			<Label.GestureRecognizers>
				<TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"/>
			</Label.GestureRecognizers>
		</Label>
	</Grid>
</controls:BaseSelectionControl>